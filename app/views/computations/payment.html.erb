<form action="/payment/results">
  <div>
    <label for="apr_input">
      APR
    </label>
    <input id="apr_input" type="float" name="apr_input" placeholder="E.g. 5.42?">
  </div>
  <div>
    <label for="nyears_input">
      Number of years
    </label>
    <input id="nyears_input" type="float" name="nyears_input" placeholder="How many years to repay?">
  </div>
  <div>
    <label for="principal_input">
      Principal
    </label>
    <input id="principal_input" type="float" name="principal_input" placeholder="How much principal?">
  </div>
  <button>Calculate monthly payment</button>

</form>
